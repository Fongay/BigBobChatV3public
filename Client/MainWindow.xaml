<Window x:Class="Client.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BigBobChatick" Height="463" Width="802">
    <Grid>
        <ListBox Name="MessageListBox" Margin="290,10,20,151"/>
        <TextBox Name="NameField" HorizontalAlignment="Left" Margin="34,28,0,0" TextWrapping="Wrap" Text="Твое имя" VerticalAlignment="Top" Width="208" Height="59" RenderTransformOrigin="0.5,0.5" FontSize="20" TextAlignment="Center">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.735"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.487"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Name="Connect" Content="Подключиться" HorizontalAlignment="Left" Margin="53,101,0,0" VerticalAlignment="Top" Height="77" Width="174" Click="Connect_Click"/>
        <TextBox Name="Message" HorizontalAlignment="Left" Margin="290,318,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="491" Height="69" RenderTransformOrigin="0.5,0.5" FontSize="20" KeyDown="TextBox_KeyDown">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.556"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.99"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
