<Window x:Class="Client.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BigBobChatick" Height="463" Width="802">
    <Grid>

        <Rectangle Fill="#FF0B2737" HorizontalAlignment="Left" Width="277" Height="Auto" Margin="0,0,0,0"/>
        <Rectangle Fill="#FF081923" Height="Auto" Margin="277,0,0,0"/>
        <ListBox Name="MessageListBox" Margin="277,32,15,72" Background="Transparent" BorderBrush="#00ABADB3" Foreground="White" BorderThickness="1,1,0,0"/>
        <TextBox Name="NameField" HorizontalAlignment="Left" Margin="34,28,0,0" TextWrapping="Wrap" Text="Твое имя" VerticalAlignment="Top" Width="200" Height="60" RenderTransformOrigin="0.5,0.5" FontSize="20" TextAlignment="Center">
            <TextBox.RenderTransform>
                <TransformGroup>

                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Name="Connect" Content="Подключиться" HorizontalAlignment="Left" Margin="53,101,0,0" VerticalAlignment="Top" Height="77" Width="174" Click="Connect_Click"/>
        <TextBox Name="Message" TextWrapping="Wrap" Text="Введите текст"  FontSize="16" KeyDown="TextBox_KeyDown" BorderBrush="{x:Null}" Background="#FF0B2737" BorderThickness="1,0,0,0" Foreground="White" Margin="277,380,0,0">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <RotateTransform Angle="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="Label" Margin="277,0,0,0" BorderThickness="1,0,0,0" Background="#FF0B2737" Foreground="White" Height="32" VerticalAlignment="Top"/>

    </Grid>
</Window>
